<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>운동 기록 등록</title>
    <style>
        body {
            padding: 20px;
            font-family: Arial, sans-serif;
        }
        form {
            max-width: 600px;
            margin: 0 auto;
        }
        div {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
        }
        input, textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }
        button[type="button"] {
            background-color: #28a745;
            color: white;
        }
        button[type="submit"] {
            background-color: #007bff;
            color: white;
        }
        .home-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #007bff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <a href="/" class="home-link">← 메인으로 돌아가기</a>
    <h1>운동 기록 등록</h1>
    <form action="/record" method="post" id="recordForm">
        <div>
            <label for="max_bpm">최대 BPM:</label>
            <input type="number" id="max_bpm" name="max_bpm" required min="0" max="250">
        </div>
        <div>
            <label for="avg_bpm">평균 BPM:</label>
            <input type="number" id="avg_bpm" name="avg_bpm" required min="0" max="250">
        </div>
        <div>
            <label for="resting_bpm">휴식 BPM:</label>
            <input type="number" id="resting_bpm" name="resting_bpm" required min="0" max="150">
        </div>
        <div>
            <label for="duration">운동 시간(Hour):</label>
            <input type="number" id="duration" name="duration" required min="0" max="1440" step="0.01">
        </div>
        <div>
            <label for="workout_type">운동 유형:</label>
            <select id="workout_type" name="workout_type" required>
                <option value="">선택하세요</option>
                <option value="Cardio">Cardio</option>
                <option value="Strength">Strength</option>
                <option value="Yoga">Yoga</option>
                <option value="HIIT">HIIT</option>
            </select>
        </div>
        <div>
            <label for="water">수분 섭취량(L):</label>
            <input type="number" id="water" name="water" required min="0" max="5000" step="0.1">
        </div>
        <div>
            <label for="description">운동 소감:</label>
            <textarea id="description" name="description" rows="4"></textarea>
        </div>
        <div id="prediction-result" style="display:none; margin: 10px 0; padding: 10px; background: #e9ecef; border-radius: 4px;"></div>
        <div>
            <button type="button" onclick="predictCalories()">칼로리 예측</button>
            <button type="submit">기록 등록</button>
        </div>
    </form>

    <script>
        async function predictCalories() {
            try {
                const data = {
                    max_bpm: Number(document.getElementById('max_bpm').value),
                    avg_bpm: Number(document.getElementById('avg_bpm').value),
                    resting_bpm: Number(document.getElementById('resting_bpm').value),
                    duration: Number(document.getElementById('duration').value),
                    workout_type: document.getElementById('workout_type').value,
                    water: Number(document.getElementById('water').value),
                    age: 25 // 나이 추가
                };

                // 입력값 검증
                for (const [key, value] of Object.entries(data)) {
                    if (key === 'workout_type') {
                        if (!value) {
                            alert('운동 유형을 선택해주세요.');
                            return;
                        }
                    } else {
                        if (!value || isNaN(value)) {
                            alert(`${document.querySelector(`label[for="${key}"]`).textContent.replace(':', '')}을(를) 입력해주세요.`);
                            return;
                        }
                    }
                }

                

                console.log('전송할 데이터:', data); // 디버깅용

                const response = await fetch('/predict', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                if (!response.ok) {
                    const errorMessage = await response.text();  // 에러 메시지 받기
                    throw new Error(`예측 오류: ${errorMessage}`);
                }

                const result = await response.json();
                const predictionDiv = document.getElementById('prediction-result');
                predictionDiv.style.display = 'block';
                predictionDiv.innerHTML = `예측된 칼로리 소모량: ${Math.round(result.predictedCalories)} kcal`;
                
            } catch (error) {
                console.error('예측 오류:', error);
                alert('예측 중 오류가 발생했습니다: ' + error.message);
            }
        }

        // 폼 제출 전 validation
        document.getElementById('recordForm').onsubmit = function(e) {
            const predictionResult = document.getElementById('prediction-result');
            if (predictionResult.style.display === 'none') {
                alert('칼로리를 먼저 예측해주세요.');
                e.preventDefault();
                return false;
            }
            return true;
        };
    </script>
</body>
</html>
